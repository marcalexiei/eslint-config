{
  "name": "@marcalexiei/eslint-config",
  "version": "2.0.1",
  "description": "A custom ESLint config",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": "^20 || ^22 || ^24"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marcalexiei/eslint-config.git",
    "directory": "packages/eslint-config"
  },
  "keywords": [
    "eslint",
    "config"
  ],
  "license": "MIT",
  "exports": {
    "./base": {
      "types": "./dist/base.d.ts",
      "default": "./dist/base.js"
    },
    "./react": {
      "types": "./dist/react.d.ts",
      "default": "./dist/react.js"
    },
    "./react-hooks": {
      "types": "./dist/react-hooks.d.ts",
      "default": "./dist/react-hooks.js"
    },
    "./typescript": {
      "types": "./dist/typescript.d.ts",
      "default": "./dist/typescript.js"
    },
    "./vitest": {
      "types": "./dist/vitest.d.ts",
      "default": "./dist/vitest.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rm -rf dist && tsc -p tsconfig.build.json",
    "typecheck": "tsc --noEmit",
    "lint": "eslint ."
  },
  "peerDependencies": {
    "@vitest/eslint-plugin": "^1.3.4",
    "eslint": "^9.0.0",
    "eslint-import-resolver-typescript": "^4.0.0",
    "eslint-plugin-import-x": "^4.4.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "typescript-eslint": "^8.0.0"
  },
  "peerDependenciesMeta": {
    "eslint-plugin-react": {
      "optional": true
    },
    "eslint-plugin-react-hooks": {
      "optional": true
    },
    "@vitest/eslint-plugin": {
      "optional": true
    }
  },
  "devDependencies": {
    "@eslint/js": "9.30.1",
    "@typescript-eslint/utils": "8.35.1",
    "@vitest/eslint-plugin": "1.3.4",
    "eslint": "9.30.1",
    "eslint-import-resolver-typescript": "4.4.4",
    "eslint-plugin-import-x": "4.16.1",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "5.2.0"
  }
}
