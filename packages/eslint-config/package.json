{
  "name": "@marcalexiei/eslint-config",
  "version": "3.2.0",
  "description": "A custom ESLint config",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": "^20 || ^22 || ^24"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marcalexiei/eslint-config.git",
    "directory": "packages/eslint-config"
  },
  "keywords": [
    "eslint",
    "config"
  ],
  "license": "MIT",
  "exports": {
    "./base": {
      "types": "./dist/base/index.d.ts",
      "default": "./dist/base/index.js"
    },
    "./react": {
      "types": "./dist/react/index.d.ts",
      "default": "./dist/react/index.js"
    },
    "./react-hooks": {
      "types": "./dist/react-hooks/index.d.ts",
      "default": "./dist/react-hooks/index.js"
    },
    "./typescript": {
      "types": "./dist/typescript/index.d.ts",
      "default": "./dist/typescript/index.js"
    },
    "./vitest": {
      "types": "./dist/vitest/index.d.ts",
      "default": "./dist/vitest/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rm -rf dist && tsc -p tsconfig.build.json",
    "typecheck": "tsc --noEmit",
    "lint": "eslint ."
  },
  "peerDependencies": {
    "@vitest/eslint-plugin": "^1.3.4",
    "eslint": "^9.0.0",
    "eslint-import-resolver-typescript": "^4.0.0",
    "eslint-plugin-import-x": "^4.4.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-hooks-extra": "^2.0.2",
    "eslint-plugin-react-x": "^2.0.2",
    "typescript-eslint": "^8.0.0"
  },
  "peerDependenciesMeta": {
    "@vitest/eslint-plugin": {
      "optional": true
    },
    "eslint-plugin-react-hooks": {
      "optional": true
    },
    "eslint-plugin-react-hooks-extra": {
      "optional": true
    },
    "eslint-plugin-react-x": {
      "optional": true
    }
  },
  "devDependencies": {
    "@eslint/js": "9.36.0",
    "@typescript-eslint/eslint-plugin": "8.44.1",
    "@typescript-eslint/utils": "8.44.1",
    "@vitest/eslint-plugin": "1.3.12",
    "eslint": "9.36.0",
    "eslint-import-resolver-typescript": "4.4.4",
    "eslint-plugin-import-x": "4.16.1",
    "eslint-plugin-react-hooks": "5.2.0",
    "eslint-plugin-react-hooks-extra": "2.0.2",
    "eslint-plugin-react-x": "2.0.2"
  }
}
